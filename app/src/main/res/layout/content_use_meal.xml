<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_meal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michele.ersupal.ui.add_meal"
    android:background="#015287">


    <TextView
        android:text="Attiva gli NFC e avvicina il tuo dispositivo al ricevitore e ricorda di ritirare lo scontrino!"
        android:textSize="18dp"
        android:paddingLeft="10dp"

        android:layout_marginRight="85dp"
        android:textColor="#FFFaFa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"

        android:layout_marginBottom="77dp"
        android:layout_above="@+id/textView11"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:layout_marginBottom="13dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Se il tuo telefono non possiede  NFC puoi sempre usare la tua fotocamera, inquadra il QRCODE e buon appetito!"
        android:textColor="#FFFaFa"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginBottom="199dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/cm"
        android:background="@color/colorPrimary"
        android:id="@+id/imgbntqrcode"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/switch2"
        android:layout_marginBottom="13dp" />
    " />


</RelativeLayout>